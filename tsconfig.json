{
  "compilerOptions": {
    "target": "ES2022",                       
    "module": "ES2022",                       
    "moduleResolution": "Node",               
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true           
  },
  "include": ["src/**/*"],                    
  "exclude": ["node_modules", "dist"]         
}